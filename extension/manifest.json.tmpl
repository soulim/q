{
  "manifest_version": 2,
  "name": "Q: process pages with your scripts",
  "short_name": "Q",
  "version": "${Q_EXTENSION_VERSION}",
  "description": "Q allows you to send web pages to your external scripts for further processing.",
  "author": "Alexander Sulim",
  "homepage_url": "https://github.com/soulim/q/",
  "permissions": [
    "nativeMessaging",
    "activeTab"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "q@sulim.dev",
      "update_url": "https://soulim.github.io/q/updates.json"
    }
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "browser_action": {
    "default_icon": {
      "16": "q-icon-16.png",
      "32": "q-icon-32.png",
      "64": "q-icon-64.png"
    },
    "default_title": "Q",
    "default_popup": "popup.html",
    "browser_style": true
  },
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Alt+Q"
      }
    }
  },
  "icons": {
    "48": "q-icon-48.png",
    "96": "q-icon-96.png"
  }
}
